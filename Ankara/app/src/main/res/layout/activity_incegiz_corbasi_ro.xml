<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incegiz_corbasi_ro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="394dp"
        android:layout_height="179dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/incegiz_corbasi_ro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="408dp"
        android:layout_height="46dp"
        android:text="İnceğiz Çorbası"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="382dp"
        android:layout_height="239dp"
        android:layout_marginBottom="4dp"
        android:text="Nohut, buğday, et ve baharatları buluşturan lezzetli bir çorba olan ve Ankara’nın yöresel lezzetlerinden biri olan İnceğiz çorbası, üzerinde gezdirilen yağda kızarmış kırmızı biberi ile de lezzetini ikiye katlamaktadır."
        app:layout_constraintBottom_toTopOf="@+id/button_ro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_ro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Yöresel Yemekler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>